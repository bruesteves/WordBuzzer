<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="@dimen/space_twenty_four"
        android:layout_height="match_parent"
        tools:context=".ui.playerselection.activity.PlayerSelectionActivity">

    <TextView
            android:id="@+id/player_selection_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_eight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/sfdisplay_bold"
            android:paddingBottom="@dimen/space_sixteen"
            android:gravity="center"
            android:text="@string/player_selection_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_twenty_two"/>

    <View android:background="@drawable/separator"
          android:layout_width="1dp"
          android:layout_height="0dp"
          android:id="@+id/separator"
          app:layout_constraintTop_toBottomOf="@+id/player_selection_title"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_selection_recyclerview_player_one"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/space_sixteen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="@dimen/space_eight"
            android:layout_marginEnd="@dimen/space_eight"
            android:layout_marginLeft="@dimen/space_eight"
            android:layout_marginStart="@dimen/space_eight"
            app:layout_constraintEnd_toStartOf="@+id/separator"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player_selection_title"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_selection_recyclerview_player_two"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/space_sixteen"
            app:layout_constraintStart_toStartOf="@id/separator"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/space_eight"
            android:layout_marginEnd="@dimen/space_eight"
            android:layout_marginLeft="@dimen/space_eight"
            android:layout_marginStart="@dimen/space_eight"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player_selection_title"/>

    <TextView
            android:id="@+id/player_selection_mask_player_one"
            android:layout_width="0dp"
            android:background="@color/alphaBlack"
            android:clickable="true"
            android:visibility="gone"
            android:focusable="true"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/player_selection_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/separator"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/sfdisplay_bold"
            android:paddingBottom="@dimen/space_sixteen"
            android:gravity="center"
            android:text="@string/player_selection_button_ready"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_twenty_two"/>

    <TextView
            android:id="@+id/player_selection_mask_player_two"
            android:layout_width="0dp"
            android:background="@color/alphaBlack"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/player_selection_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/separator"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/sfdisplay_bold"
            android:paddingBottom="@dimen/space_sixteen"
            android:gravity="center"
            android:text="@string/player_selection_button_ready"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_twenty_two"/>

</androidx.constraintlayout.widget.ConstraintLayout>